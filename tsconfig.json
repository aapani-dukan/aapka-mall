{
  "compilerOptions": {
    "target": "ES6",                    // आउटपुट JS वर्शन
    "module": "ESNext",                 // मॉड्यूल सिस्टम (React के लिए ESModules)
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    "jsx": "react-jsx",                 // React 17+ JSX ट्रांसफॉर्म सपोर्ट

    "strict": true,                    // सारे strict type checks ऑन
    "esModuleInterop": true,           // CommonJS और ESModule इंटरेक्शन सही से
    "skipLibCheck": true,              // type libraries चेक स्किप करें (तेज़ी के लिए)
    "forceConsistentCasingInFileNames": true,

    "resolveJsonModule": true,         // JSON import की सुविधा

    "baseUrl": ".",                    // path alias के लिए बेस
    "paths": {
      "@client/*": ["client/src/*"],
      "@server/*": ["server/*"],
      "@shared/*": ["shared/*"]
    },

    "rootDir": ".",                    // सोर्स फाइलों का रूट
    "outDir": "dist"                   // बिल्ड फाइलों के लिए आउटपुट फोल्डर
  },
  "include": [
    "client/src/**/*",
    "shared/**/*",
    "server/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
