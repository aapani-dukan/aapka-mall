{
  "compilerOptions": {
    "rootDir": ".",            // या "./" जिससे client, shared, server सब आ जाएं
    "outDir": "dist",          // अगर output चाहिए तो
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "client/src/**/*",
    "shared/**/*",
    "server/**/*"
  ]
}
