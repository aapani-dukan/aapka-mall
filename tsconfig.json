{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": ".",                        // प्रोजेक्ट का रूट
    "outDir": "dist",                      // आउटपुट बिल्ड डायरेक्टरी
    "strict": true,                        // सभी strict checks ऑन
    "esModuleInterop": true,              // default import support
    "skipLibCheck": true,                 // lib files को स्किप करें
    "forceConsistentCasingInFileNames": true, // केस-सेंसिटिव फाइल नाम
    "resolveJsonModule": true,            // JSON फाइलें import करने की सुविधा
    "baseUrl": ".",                       // आसान pathing के लिए
    "paths": {
      "@client/*": ["client/src/*"],
      "@server/*": ["server/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "client/src/**/*",
    "shared/**/*",
    "server/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
